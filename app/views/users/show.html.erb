<h1 class="mt-3">Информация о пользователе</h1>

<div class="mt-3">
  <p>Email: <%= @user.email %></p>
  <p>Роль: <%= @user.role %></p>
</div>

<% if current_user.admin? %>
  <div class="mt-3">
    <%#= link_to 'Редактировать', edit_user_path(@user), class: 'btn btn-primary' %>
    <%#= button_to 'Удалить', @user, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger', form: { class: 'd-inline' } %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to 'Вернуться к списку пользователей', users_path, class: 'btn btn-secondary' %>
</div>
