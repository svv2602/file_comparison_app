<!--app/views/projects/compare_new_results.html.erb-->

<%# if @results.present? %>
  <div class="row mt-3">
    <div class="col-auto text-center">
      <h4 class="mt-2">Результат сравнения</h4>
    </div>
    <div class="col">
      <%= link_to '< Назад',  compare_form_project_path(@project), class: "btn btn-warning" %>
    </div>
  </div>

  <table class="table table-bordered mt-2">
    <thead>
    <tr>
      <th>№ стр</th>
      <th>строка для поиска</th>
      <th>% совпадений</th>
      <th>№ стр</th>
      <th>результат поиска</th>

    </tr>
    </thead>
    <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result[1]["num_str1"] %></td>
        <td><%= raw result[1]["row1"] %></td>
        <td class="text-center"><%= raw result[1]["sum_all"] %></td>
        <td><%= result[1]["num_str2"] %></td>
        <td><%= raw result[1]["row2"] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>


<%# end %>

