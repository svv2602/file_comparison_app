
<h1><%= @project.name %></h1>

<% @project.files.each do |file| %>
  <p><%= link_to file.filename.to_s, url_for(file) %></p>
<% end %>

<%= link_to 'Edit', edit_project_path(@project), class: "btn btn-primary" %>
<%= link_to 'Back', projects_path, class: "btn btn-secondary" %>


<%= form_with(url: compare_project_path(@project), method: :post, local: true) do %>
  <div class="form-group">
    <%= label_tag 'file1_id', 'File 1' %>
    <%= select_tag 'file1_id', options_from_collection_for_select(@project.files, 'id', 'filename'), class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'file2_id', 'File 2' %>
    <%= select_tag 'file2_id', options_from_collection_for_select(@project.files, 'id', 'filename'), class: 'form-control' %>
  </div>
  <%= submit_tag 'Compare', class: "btn btn-primary" %>
<% end %>

<turbo-frame id="results">
  <%= render 'projects/compare_results', results: @results %>
</turbo-frame>
