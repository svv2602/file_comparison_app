<%= form_with(url: compare_project_path(@project), method: :post, local: true) do %>
  <div class="form-group">
    <%= label_tag 'file1_id', 'File 1' %>
    <%= select_tag 'file1_id', options_from_collection_for_select(@project.uploaded_files, 'id', proc { |uf| uf.content.filename.to_s }),
                   prompt: 'Выберите файл', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'file2_id', 'File 2' %>
    <%= select_tag 'file2_id', options_from_collection_for_select(@project.uploaded_files, 'id', proc { |uf| uf.content.filename.to_s }),
                   prompt: 'Выберите файл', class: 'form-control' %>  </div>
  <%= submit_tag 'Compare', class: "btn btn-primary" %>
<% end %>


<turbo-frame id="results">
  <%= render 'compare_results', results: @results %>
</turbo-frame>