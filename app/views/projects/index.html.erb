<div class="mb-3 row">
  <div class="col  mt-3">
    <h2>Документы</h2>
  </div>
  <div class="col">
    <%= link_to 'Новая группа документов', new_project_path, class: "btn btn-primary mt-3 mb-3" %>
  </div>
</div>

<%= render "shared/show_pagination" %>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Группа документов</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td>
            <%= button_to 'Удалить', project_path(project), method: :delete,
                          data: { turbo_confirm: 'Are you sure?' },
                          class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "shared/show_pagination" %>